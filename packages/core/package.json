{
  "name": "@logtide/core",
  "version": "0.5.6",
  "description": "Core client, hub, scope, transports, and utilities for the LogTide SDK",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "clean": "node -e \"require('fs').rmSync('dist', {recursive: true, force: true})\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/logtide-dev/logtide-javascript.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/logtide-dev/logtide-javascript#readme",
  "bugs": {
    "url": "https://github.com/logtide-dev/logtide-javascript/issues"
  },
  "author": "Polliog <giuseppe@solture.it>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@logtide/types": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.5.4"
  }
}
